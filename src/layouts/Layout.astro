---
const { title } = Astro.props;
const isHomePage = Astro.url.pathname === '/';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    {!isHomePage && (
      <nav class="home-nav">
        <a href="/" title="Home">..</a>
      </nav>
    )}

    <main>
      <slot /> <!-- Markdown content gets injected here -->
    </main>

  </body>
</html>
